# Application
NODE_ENV=development
APP_NAME=post-service
APP_DEBUG=false
APP_CORS_ORIGINS=http://localhost:3000

# HTTP
HTTP_ENABLE=true
HTTP_HOST=0.0.0.0
HTTP_PORT=9002
HTTP_VERSIONING_ENABLE=false
HTTP_VERSION=1

# Monitoring (optional)
SENTRY_DSN=

# Database
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB?schema=post

# JWT (same values as auth-service — only used for guard validation)
ACCESS_TOKEN_SECRET_KEY=change-me-min-32-chars-access-secret
ACCESS_TOKEN_EXPIRED=15m
REFRESH_TOKEN_SECRET_KEY=change-me-min-32-chars-refresh-secret
REFRESH_TOKEN_EXPIRED=7d

# Redis
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=post:
REDIS_TTL=3600

# gRPC — post-service server
GRPC_URL=0.0.0.0:50052
GRPC_PACKAGE=post

# gRPC — auth-service client
GRPC_AUTH_URL=0.0.0.0:50051
GRPC_AUTH_PACKAGE=auth

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_POST_WORKER_QUEUE=post_worker_queue
